<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Blogs</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <style>
        .btn-secondary 
        {
            background-color: #007bff; /* Primary blue button background color */
            border-color: #007bff; /* Primary blue button border color */
            padding: 12px 35px;
            transition: all 0.3s ease;
        }
        .btn-secondary:hover
        {
            background-color: #0056b3; /* Darker blue on hover */
            border-color: #0056b3; /* Darker blue border on hover */
            transform: scale(1.05);
        }
        
    </style>
</head>
<body style="background-color: rgb(215, 215, 215);">
  <div class="container d-flex justify-content-between mx-5 mt-5 w-100">
    <h1 class="d-inline">All Blogs</h1>
    <a href="/add-blog" class="btn btn-secondary p-3">Add New Blog</a>
  </div>
  <div class="container w-100 d-flex mt-5 border bg-white p-5 flex-wrap">
    <!-- Iterate over each blog item -->
    <% for(let item of allBlogs) { %>
      <div class="card mx-2 mt-3" style="width: 18%;">
        <!-- Display blog image -->
        <img class="card-img-top" src="<%= item.photo[0] %>" alt="Card image cap">
        <div class="card-body">
          <!-- Display blog title -->
          <h5 class="card-title"><%= item.title %></h5>
          <!-- Display blog author -->
          <p class="card-text">By: <%= item.name %></p>
          <div class="d-flex justify-content-between">
            <!-- Link to read the blog -->
            <a href="/read-blog/<%= item.id %>" class="btn btn-primary mb-2">Read</a>
            <!-- Form to delete the blog -->
            <form action="/delete-blog/<%= item.id %>" method="POST">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    <% } %>
  </div>
  
  <!-- Include Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>
